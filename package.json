{
  "name": "linear-notion-sync",
  "version": "0.2.0",
  "description": "Sync Linear issues to Notion database",
  "author": "Tyler Getsay @tylergets",
  "bin": {
    "linear-notion-sync": "./bin/run"
  },
  "homepage": "https://github.com/tylergets/linear-notion-sync",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "tylergets/linear-notion-sync",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@linear/sdk": "^2.1.0",
    "@notionhq/client": "^2.2.5",
    "@oclif/core": "^2",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.3.0",
    "@tryfabric/martian": "^1.2.4"
  },
  "devDependencies": {
    "@oclif/test": "^2.3.4",
    "@types/chai": "^4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.18.11",
    "chai": "^4",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.3",
    "mocha": "^9",
    "oclif": "^3",
    "shx": "^0.3.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "oclif": {
    "bin": "linear-notion-sync",
    "dirname": "linear-notion-sync",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {
      "linear": {
        "description": "Linear tools"
      }
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/tylergets/linear-notion-sync/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
